@page
@model StudentManagement_RazorPage.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f4ff;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            width: 400px;
            margin: 120px auto;
            border-top: 6px solid #bdc5f5;
        }

        h1 {
            text-align: center;
            color: #4a4a8c;
            margin-bottom: 30px;
            font-weight: bold;
        }

        .form-label {
            color: #4a4a8c;
        }

        .btn-primary {
            background-color: #bdc5f5;
            border-color: #bdc5f5;
        }

            .btn-primary:hover {
                background-color: #a3b0f0;
                border-color: #a3b0f0;
            }

        .btn-secondary {
            background-color: #e4e6f9;
            border-color: #bdc5f5;
            color: #4a4a8c;
        }

            .btn-secondary:hover {
                background-color: #ccd0f7;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>Login</h1>
        <form method="post">
            <div class="mb-3">
                <label for="txtEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="txtEmail" name="txtEmail" required>
            </div>
            <div class="mb-3">
                <label for="txtPassword" class="form-label">Password</label>
                <input type="password" class="form-control" id="txtPassword" name="txtPassword" required>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary" name="btnLogin">Login</button>
                <button type="reset" class="btn btn-secondary" name="btnReset">Reset</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
