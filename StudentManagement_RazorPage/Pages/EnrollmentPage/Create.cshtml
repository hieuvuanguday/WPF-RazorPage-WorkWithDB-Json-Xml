@page
@model StudentManagement_RazorPage.Pages.EnrollmentPage.CreateModel

@{
    ViewData["Title"] = "Create";

    int roleID = int.Parse(HttpContext.Session.GetString("RoleID"));
    if (roleID != 1)
    {
        Response.Redirect("../Permission");
    }
}

<h1 class="text-center" style="color: #4b4b4b;">Create Enrollment</h1>

<h4 class="text-center">Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Enrollment.StudentId" class="control-label"></label>
                <select asp-for="Enrollment.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="Enrollment.StudentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Enrollment.CourseId" class="control-label"></label>
                <select asp-for="Enrollment.CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="Enrollment.CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Enrollment.Grade" class="control-label"></label>
                <input asp-for="Enrollment.Grade" class="form-control" />
                <span asp-validation-for="Enrollment.Grade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Enrollment.EnrollmentDate" class="control-label"></label>
                <input asp-for="Enrollment.EnrollmentDate" class="form-control" type="date" />
                <span asp-validation-for="Enrollment.EnrollmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Enrollment.Status" class="control-label"></label>
                <input asp-for="Enrollment.Status" class="form-control" />
                <span asp-validation-for="Enrollment.Status" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-left" style="margin-top: 10px">
                <input type="submit" value="Create" class="btn btn-primary" style="background-color: #77eb34; border-color: #77eb34; margin-right: 10px"/>
                <a asp-page="Index" class="btn btn-secondary" style="background-color: #f0f0f5; border-color: #77eb34; color: #4b4b4b;">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
