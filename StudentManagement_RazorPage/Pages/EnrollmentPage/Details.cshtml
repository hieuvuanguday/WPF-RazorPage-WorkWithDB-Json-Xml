@page
@model StudentManagement_RazorPage.Pages.EnrollmentPage.DetailsModel

@{
    ViewData["Title"] = "Details";

    int roleID = int.Parse(HttpContext.Session.GetString("RoleID"));
    if (roleID != 1 && roleID != 2)
    {
        Response.Redirect("../Permission");
    }
}

<h1 class="text-center" style="color: #4b4b4b;">Enrollment Details</h1>

<div class="container mt-4">
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.EnrollmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Grade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Course.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Student.FullName)
        </dd>
    </dl>

    <div class="mt-3">
        @{
            if (roleID == 1)
            {
                <a asp-page="./Edit" asp-route-id="@Model.Enrollment.EnrollmentId" class="btn btn-warning" style="background-color: #77eb34; border-color: #77eb34; color: #4b4b4b;">Edit</a>
            }
        }
        <a asp-page="./Index" class="btn btn-secondary" style="background-color: #f0f0f5; border-color: #77eb34; color: #4b4b4b;">Back to List</a>
    </div>
</div>
