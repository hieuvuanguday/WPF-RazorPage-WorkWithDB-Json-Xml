@page
@model StudentManagement_RazorPage.Pages.EnrollmentPage.DeleteModel

@{
    ViewData["Title"] = "Delete";

    int roleID = int.Parse(HttpContext.Session.GetString("RoleID"));
    if (roleID != 1)
    {
        Response.Redirect("../Permission");
    }
}

<h1 class="text-center" style="color: #4b4b4b;">Delete Enrollment</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div class="container mt-4">
    <h4>Enrollment Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.EnrollmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Grade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Course.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Student.FullName)
        </dd>
    </dl>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Enrollment.EnrollmentId" />
        <div class="d-flex justify-content-left" style="margin-top: 10px">
            <input type="submit" value="Delete" class="btn btn-danger" style="background-color: #dc3545; border-color: #dc3545; margin-right: 10px" />
            <a asp-page="./Index" class="btn btn-secondary" style="background-color: #f0f0f5; border-color: #77eb34; color: #4b4b4b;">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
